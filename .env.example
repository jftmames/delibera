# DELIBERA - Configuración de Entorno
# =====================================
# Copie este archivo a .env y configure las variables

# API Key de OpenAI (opcional, para generación con LLM)
# Si no se configura, el sistema usa heurísticas locales
OPENAI_API_KEY=sk-your-api-key-here

# Configuración de la aplicación
DELIBERA_ENV=development
DELIBERA_DEBUG=false

# Configuración del modelo (si usa OpenAI)
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3

# Directorio de datos persistentes
DATA_DIR=./data
CHROMA_PERSIST_DIR=./chroma_db
